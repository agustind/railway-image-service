{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "Default",
	"compilerOptions": {
		"target": "ES2018",
		"module": "ESNext",
		"declaration": false,
		"esModuleInterop": true,
		"strict": true,
		"skipLibCheck": true,
		"allowJs": true,
		"jsx": "react-jsx",
		"moduleResolution": "node",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"resolveJsonModule": true,
		"types": ["node", "vitest", "react"]
	},
	"include": ["src"]
}
